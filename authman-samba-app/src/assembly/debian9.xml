<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>debian9</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <baseDirectory>/</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/assembly/common/data</directory>
            <outputDirectory>var/lib/bec/data</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/assembly/common/lib</directory>
            <outputDirectory>var/lib/bec/lib</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>src/assembly/debian9/application.yml</source>
            <outputDirectory>etc/bec</outputDirectory>
            <filtered>false</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>src/assembly/debian9/bec.service</source>
            <outputDirectory>lib/systemd/system</outputDirectory>
            <filtered>false</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>src/assembly/debian9/bec.sh</source>
            <outputDirectory>usr/bin</outputDirectory>
            <filtered>false</filtered>
            <fileMode>755</fileMode>
        </file>
        <file>
            <source>src/assembly/debian9/env.conf</source>
            <outputDirectory>etc/bec</outputDirectory>
            <filtered>false</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>src/assembly/debian9/plugins.xml</source>
            <outputDirectory>var/lib/bec</outputDirectory>
            <filtered>false</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>target/bec.jar</source>
            <outputDirectory>usr/share/java</outputDirectory>
            <destName>bec.jar</destName>
            <filtered>false</filtered>
            <fileMode>644</fileMode>
        </file>
    </files>
</assembly>